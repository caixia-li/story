.comment-box{
  box-sizing: border-box;
  background-color: #ffffff;
  padding: 0 10rpx;
  font-family: "kaiti";
  margin-bottom: 10rpx;
  border-radius: 20rpx;
  border-bottom: 1rpx solid #f5f2f2;
}

.comment-head{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.avatar{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.nickName{
  margin-left: 10rpx;
  color: #777777;
  font-size: 30rpx;
}

.comment{
  line-height: 80rpx;
}

.time{
  color: #777777;
  font-size: 28rpx;
  line-height: 50rpx;
}