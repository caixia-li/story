.swiper-box{
  padding:0 20rpx;
}

.swiper-box image{
  border-radius: 20rpx;
}

.triangle{
  box-sizing: border-box;
  height: 60rpx;
  width: 40rpx;
  border-bottom: 60rpx solid #ffffff;
  border-left: 40rpx solid transparent;
  border-right: 40rpx solid transparent;
  margin: 0 auto;
  position: relative;
  top: 20rpx;
}
.intro-box{
  margin: 0 auto;
  width: 700rpx;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: 0 0 25rpx #cccccc;
  border-radius: 15rpx;
}
.head{
  display: flex;
  align-items: center;
  height: 60rpx;
}
.title{
  font-family: "simHei";
  font-size: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tag{
  font-size: 24rpx;
  margin: 0rpx 10rpx;
  padding:5rpx 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  color: #777777;
  white-space: nowrap;
  overflow: hidden;
}

.intro{
  font-size: 30rpx;
  color: #666666;
  line-height: 50rpx;
  max-height: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
