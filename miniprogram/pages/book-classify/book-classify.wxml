      <image src="{{item.imgUrl}}" mode="scaleToFill" class="img"></image>
      <view class="detail">
        <view class="classify-title">{{navList[index]}}</view>
        <view class="classify-num">{{item.total}}éƒ¨</view>
      </view>
    </view>
  </block>
</view>

