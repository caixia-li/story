page{
  box-sizing: border-box;
  width: 750rpx;
  height: 100%;
}

.infro-box{
  box-sizing: border-box;
  width: 750rpx;
  padding: 40rpx 40rpx 0 40rpx;
  background-color: #e7e7e7;
}
.infro{
  width: 100%;
  height: 400rpx;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.avatar{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 50rpx 235rpx 20rpx 235rpx;
}

.nickName{
  display: block;
  width: 100%;
  text-align: center;
  color: #555555;
  font-size: 38rpx;
  font-family:cursive;
}

.VIP-box{
  box-sizing: border-box;
  width: 750rpx;
  margin-top: -40rpx;
  padding: 0 40rpx;
  background-color: #e7e7e7;
}

.VIP-cover{
  background-color: #ffffff;
}

.VIP{
  background-color: #d81e06;
  height: 100rpx;
  margin-top: -40rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.VIP-icon{
  font-size: 38rpx;
  color: gold;
}

.VIP-text{
  font-size: 32rpx;
  font-family:cursive;
  margin-right: 10rpx;
}

.VIP-btn{
  font-size: 24rpx;
  padding: 0rpx 20rpx;
  border: 1px solid #ffffff;
  line-height: 36rpx;
  height: 36rpx;
  border-radius: 36rpx;
}

.mine{
  box-sizing: border-box;
  background-color: #ffffff;
  width: 750;
  padding: 0 40rpx;
}

button{
  border: none;
  background-color: transparent;
  padding: 0;
}

button::after{
  border: none;
  background-color: transparent;
}

.button-hover{
  background-color: transparent;
}

.mine-item{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f8f8f8;
  color: #777777;
  display: flex;
  justify-content: space-between;
}

.text{
  font-family:cursive;
  margin-left: 10rpx;
  font-size: 36rpx;
}

.item-icon{
  font-size: 44rpx;
  vertical-align: center;
}

.phone{
  font-size: 28rpx;
  margin-right: 10rpx;
}