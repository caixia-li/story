page{
  background-color: #f3f3f3;
}
.cover{
  width: 750rpx;
  height: 340rpx;
  background-color:#ffffff;
  opacity: 0.8;
}

.cover image{
  width: 750rpx;
  height: 340rpx;
  opacity: 0.4;
  filter: blur(40rpx);
}

.content{
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 320rpx;
  padding: 0rpx 20rpx;
  display: flex;
  align-items: center;
}

.content image{
  height: 280rpx;
  width: 180rpx;
}

.content .content-detail{
  box-sizing: border-box;
  width: 530rpx;
  padding: 0 20rpx;
  height: 280rpx;
  font-family: "kaiti";
}

.title{
  padding: 10rpx 0;
  font-size: 44rpx;
  font-weight: bolder;
}

.author{
  font-size: 30rpx;
  color: #7f7f7f;
}

.tags{
  display: flex;
}

.tag-item{
  font-size: 28rpx;
  height: 30rpx;
  padding: 6rpx 10rpx;
  border: 1px solid rgb(70, 241, 70);
  border-radius: 30rpx;
  color: rgb(70, 241, 70);
  margin: 10rpx 10rpx 10rpx 0rpx;
}

.sign{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.nav{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  padding: 0 20rpx;
  color: #777777;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.nav-item{
 padding: 0px 10rpx;
 margin-right: 20rpx;
 border-bottom: 2px solid #f3f3f3;
}
.nav-active{
  color: #d81e06;
  border-bottom: 2px solid #d81e06;
} 

.detail{
  width: 750rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #f3f3f3;
  color: #777777;
  font-size: 30rpx;
  font-family: "kaiti";
  line-height:50rpx; 
  margin-top: 10rpx;
}

.detail-title{
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e7e7e7;
}

.bottom-box{
  box-sizing: border-box;
  width: 750rpx;
  padding:20rpx 40rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
}

.bottom{
  display: flex;
  justify-content: space-between;
}

.bottom-item{
  text-align: center;
}

.item-icon{
  font-size: 44rpx;
  color: #444444;
}

.text{
  font-size: 30rpx;
  color: #444444;
}

.item-icon-active{
  font-size: 44rpx;
  color: #cccccc;
}

.text-active{
  font-size: 30rpx;
  color: #cccccc;
}

button{
  border: none;
  background-color: transparent;
  padding: 0;
  margin: 0;
  line-height: 1.2;
}

button::after{
  border: none;
  background-color: transparent;
}

.button-hover{
  background-color: transparent;
}

.comment{
  box-sizing: border-box;
  margin-bottom: 130rpx;
  padding: 0 20rpx;
}

.comment-title{
  font-size: 36rpx;
  color: #555555;
  line-height: 80rpx;
}

.comment-empty{
  line-height: 100rpx;
  color: #1296db;
  background-color: #ffffff;
  text-align: center;
}
