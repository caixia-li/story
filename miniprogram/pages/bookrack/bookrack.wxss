page{
   width: 750rpx;
   height: 100%;
}
.booklist{
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  width: 750rpx;
}
.booklist-item{
  box-sizing: border-box;
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
}
.booklist-item image{
  width: 150rpx;
  height: 200rpx;
  box-shadow: 0rpx 0rpx 10rpx #777777;
}

.booklist-detail{
  width: 490rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  padding: 0px 20rpx;
  height: 200rpx;
}

.booklist-detail .title{
  font-size: 36rpx;
  margin-top: 15rpx;
}

.booklist-detail .author{
  font-size: 30rpx;
  color: #777777;
  margin: 15rpx 0;
}

.booklist-detail .sign{
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #fcd248;
}

.empty-box{
   width: 750rpx;
   height: 100%;
}
.head{
  width: 750rpx;
  height: 300rpx;
  background-color: #e7e7e7;
}
.empty{
  box-sizing: border-box;
  margin-top: -40rpx;
  background-color: #ffffff;
  width: 750rpx;
  height: 600rpx;
  text-align: center;
  padding:40rpx;
  border-radius: 40rpx;
}

.emptyicon{
  padding: 40rpx;
  font-size: 250rpx;
  color: red;
}

.empty-text{
  margin-top: 40rpx;
  font-family: "kaiti";
  font-size: 40rpx;
}

.empty-link{
  margin-top: 20rpx;
  font-family: "kaiti";
  font-size: 32rpx;
  color: #777777;
}

.empty-btn{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
  background-color: #d81e06;
  color: #ffffff;
  border-radius: 70rpx;
}
