page{
   width: 750rpx;
   height: 100%;
}
.booklist{
  box-sizing: border-box;
  padding: 0rpx 40rpx;
  width: 750rpx;
}
.booklist-item{
  box-sizing: border-box;
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e7e7e7;
}
.booklist-item image{
  width: 150rpx;
  height: 200rpx;
  box-shadow: 0rpx 0rpx 10rpx #777777;
}

.booklist-detail{
  width: 490rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  padding: 0px 20rpx;
  height: 200rpx;
}

.booklist-detail .title{
  font-size: 36rpx;
  margin-top: 15rpx;
}

.booklist-detail .author{
  font-size: 30rpx;
  color: #777777;
  margin: 15rpx 0;
}

.booklist-detail .sign{
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #fcd248;
}




