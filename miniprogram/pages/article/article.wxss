page{
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  background-color: #f3f3f3;
  font-family: "kaiti";
}

.head{
  width: 100%;
  font-size: 44rpx;
  height: 100rpx;
  text-align: center;
}

.content{
  width: 100%;
  box-sizing: border-box;
  text-indent: 80rpx;
}

.content-item{
  width: 100%;
  box-sizing: border-box;
  line-height: 60rpx;
}

.control{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  border-top: 1px dashed #e8e8e8;
  margin-top: 20rpx;
}

.control-item{
  padding: 20rpx;
}

.control-item:hover{
  color: #d81e06;
}

